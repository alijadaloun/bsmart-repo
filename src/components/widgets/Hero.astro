---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose overflow-hidden" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 z-10">
    <div class="pt-0 lg:pt-[76px] pointer-events-none"></div>
    <div class="py-8 sm:py-12 lg:py-20">
      <div class="text-center pb-8 sm:pb-10 md:pb-16 max-w-5xl mx-auto px-4 sm:px-6">
        {
          tagline && (
            <p
              class="text-sm sm:text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase drop-shadow-sm mb-3 sm:mb-4 intersect-once intersect-quarter motion-safe:lg:opacity-0 motion-safe:lg:intersect:animate-fade"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight sm:leading-tighter tracking-tighter mb-3 sm:mb-4 font-heading text-gray-900 dark:text-white drop-shadow-sm intersect-once intersect-quarter motion-safe:lg:opacity-0 motion-safe:lg:intersect:animate-fade"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-base sm:text-lg md:text-xl text-gray-700 dark:text-slate-200 mb-5 sm:mb-6 drop-shadow-sm px-2 sm:px-0 intersect-once intersect-quarter motion-safe:lg:opacity-0 motion-safe:lg:intersect:animate-fade"
                set:html={subtitle}
              />
            )
          }
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-3 sm:gap-4 px-4 sm:px-0 intersect-once intersect-quarter motion-safe:lg:opacity-0 motion-safe:lg:intersect:animate-fade">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="w-full sm:mb-0 text-sm sm:text-base px-4 sm:px-6 py-2.5 sm:py-3.5" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div
        class="intersect-once intersect-no-queue intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
      >
        {
          image && (
            <div class="relative m-auto max-w-5xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto rounded-md w-full"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  loading="eager"
                  width={1024}
                  height={576}
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
