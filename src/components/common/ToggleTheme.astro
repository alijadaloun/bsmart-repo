---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class: className = '',
  iconClass = 'w-4 h-4',
} = Astro.props;
---

{!(UI.theme && UI.theme.endsWith(':only')) && (
  <button
    type="button"
    class={`relative inline-flex h-6 w-11 items-center rounded-full bg-gray-300 dark:bg-gray-600 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 ${className}`}
    aria-label={label}
    data-aw-toggle-color-scheme
  >
    <span class="inline-block h-4 w-4 transform rounded-full bg-white dark:bg-gray-800 transition-transform translate-x-0.5 dark:translate-x-6 flex items-center justify-center">
      <Icon name="tabler:sun" class={`${iconClass} text-yellow-500 dark:hidden`} />
      <Icon name="tabler:moon" class={`${iconClass} text-gray-700 hidden dark:inline-block`} />
    </span>
  </button>
)}
