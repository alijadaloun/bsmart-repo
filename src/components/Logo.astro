---
import { SITE } from 'astrowind:config';
---

<a href="/" class="flex items-center">
  <!-- Light mode logo -->
  <img
    src="/BSMARTLOGO_Light.png"
    alt={`${SITE?.name} Logo`}
    class="h-16 md:h-20 lg:h-24 w-auto dark:hidden"
  />
  <!-- Dark mode logo -->
  <img
    src="/BSMARTLOGO_Dark.png"
    alt={`${SITE?.name} Logo`}
    class="h-16 md:h-20 lg:h-24 w-auto hidden dark:block"
  />
</a>
