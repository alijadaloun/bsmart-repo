---
import { getAsset } from '~/utils/permalinks';

// Using LOGO.svg for favicon and LOGO.png for Apple touch icon
const logoSvgPath = getAsset('/LOGO.svg');
const logoPngPath = getAsset('/LOGO.png');
---

<!-- Standard favicon (SVG) -->
<link rel="icon" type="image/svg+xml" href={logoSvgPath} />

<!-- Apple touch icon (PNG - Apple doesn't support SVG) -->
<link rel="apple-touch-icon" sizes="180x180" href={logoPngPath} />
