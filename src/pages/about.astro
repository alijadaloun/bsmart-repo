---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About B-Smart"
    image={{
      src: 'https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'B-Smart Learning Center',
    }}
  >
    <Fragment slot="title">
      Empowering Students Through <br />
      <span class="text-accent dark:text-white">Personalized Education</span>
    </Fragment>

    <Fragment slot="subtitle">
      At B-Smart, we believe that every student has the potential to excel. Our mission is to provide high-quality, personalized tutoring services that help students build confidence, improve grades, and achieve their academic goals. With experienced tutors, proven teaching methods, and a commitment to student success, we're here to support your learning journey.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Students Taught', amount: '500+' },
      { title: 'Years of Experience', amount: '10+' },
      { title: 'Success Rate', amount: '95%' },
      { title: 'Subjects Offered', amount: '12+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Teaching Philosophy"
    subtitle="We approach education with a focus on understanding, engagement, and empowerment. Our methods are designed to help students not just memorize, but truly comprehend and apply what they learn."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Student-Centered Learning',
        description:
          "Every lesson is tailored to the individual student. We adapt our teaching style to match each student's learning preferences, ensuring maximum comprehension and retention.",
        icon: 'tabler:user',
      },
      {
        title: 'Building Confidence',
        description:
          'We create a supportive environment where students feel safe to ask questions and make mistakes. Building confidence is just as important as building knowledge.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Practical Application',
        description:
          "We connect abstract concepts to real-world applications, helping students understand not just the \"what\" but the \"why\" behind what they're learning.",
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Continuous Assessment',
        description:
          'Regular progress checks help us identify areas that need more attention and celebrate improvements. We adjust our approach based on what works best for each student.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Collaborative Learning',
        description:
          'Small group sessions encourage peer learning and collaboration, while one-on-one sessions provide focused, individualized attention when needed.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Long-Term Success',
        description:
          'Beyond improving grades, we teach study skills, time management, and critical thinking that benefit students throughout their academic and professional careers.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'B-Smart Teaching Methods',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="These core values guide everything we do at B-Smart and shape how we interact with students, parents, and our community."
    items={[
      {
        title: 'Excellence in Education',
        description:
          'We are committed to providing the highest quality tutoring services. Our tutors are continuously improving their skills and staying updated with the latest teaching methods and curriculum changes.',
      },
      {
        title: 'Student Success First',
        description:
          "Every decision we make is centered on what's best for our students. Their academic success and personal growth are our top priorities.",
      },
      {
        title: 'Integrity and Trust',
        description:
          'We build lasting relationships with students and parents based on honesty, transparency, and reliability. You can trust us to deliver on our promises.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose B-Smart"
    subtitle="What sets us apart from other tutoring centers and makes us the right choice for your educational needs."
    isReversed={true}
    callToAction={{
      text: 'Get Started Today',
      href: '/contact',
    }}
    items={[
      {
        title: 'Experienced Tutors',
        description: 'Our team consists of qualified educators with years of experience. They understand how to make learning engaging and effective.',
        icon: 'tabler:user-star',
      },
      {
        title: 'Proven Results',
        description:
          'We have a track record of helping students improve their grades, build confidence, and achieve their academic goals. Our success rate speaks for itself.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Personalized Approach',
        description:
          "No two students are the same, and neither are our teaching methods. We create customized learning plans that address each student's unique needs.",
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Commitment to You"
    tagline="What We Promise"
    columns={2}
    items={[
      {
        title: 'Quality Instruction',
        description: 'Every tutor at B-Smart is carefully selected for their expertise, teaching ability, and passion for education. We maintain high standards to ensure your child receives the best possible instruction.',
      },
      {
        title: 'Regular Communication',
        description: "We keep parents informed about their child's progress through regular updates and progress reports. Open communication is key to student success.",
      },
      {
        title: 'Flexible Scheduling',
        description: "We understand that families have busy schedules. That's why we offer flexible timing options including evenings and weekends to accommodate your needs.",
      },
      {
        title: 'Supportive Environment',
        description: 'Our learning center is designed to be welcoming and comfortable. We create an atmosphere where students feel encouraged to learn and grow.',
      },
    ]}
  />
</Layout>
